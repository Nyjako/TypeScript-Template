{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "target": "ES2022",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}